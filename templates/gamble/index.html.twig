{% extends 'base.html.twig' %}


{% block body %}

<style>
    .content{
        margin: 0 auto;
        padding-top: 20%;
        width:40%;
    }
    .register{
        padding: 2%;
    }
</style>
<a href="{{ path('logout') }}">LOGOUT</a>
<div class="content">
    <h1 style="text-align:center">Your balance is: {{ balance }}</h1>
    {% if bet == false %}
        {% for stock in stocks %}
            <a href="{{ path('gamble-bet', { 'id': stock.id }) }}">
            <b>Stock FUll Name:</b> {{stock.fullName}}<br/>
            <b>Stock SHORT Name:</b> {{stock.shortName}}<br/>
            <b>Stock Current Price:</b> {{stock.currPrice}}<br/>
            <b>Stock Last Price:</b> {{stock.lastPrice}}<br/>
            ------------------<br/>
            </a>
        {% endfor %}
    {% endif %}

    {% if bet == true %}
        {{ form_start(form, {'method' : 'POST'}) }}
            {{ form_row(form.stakes) }}
            {{ form_row(form.position) }}
            {{ form_row(form.timestamp) }}
            <button type="submit">BET</button>
        {% form_theme form 'form/fields.html.twig' %}
        {{ form_end(form) }}
    {% endif %}
</div>

{% endblock %}
